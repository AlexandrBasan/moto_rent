<h1 align="center"><%= (t 'airports.airports') %> <span class="badge"><%= @airports.count %></span></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Cc fips</th>
      <th>Name</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Fixed fare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.code %></td>
        <td><%= airport.cc_fips %></td>
        <td><%= airport.name %></td>
        <td><%= airport.lat %></td>
        <td><%= airport.long %></td>
        <td><%= airport.fixed_fare %></td>
        <td><%= link_to 'Show', airport, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_airport_path(airport), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', airport, method: :delete, data: {confirm: (t 'operations_confirmation.confirm')}, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airport', new_airport_path, class: "btn btn-sm btn-primary" %>

<p>
  Download:
  <%= link_to "CSV", airports_path(format: "csv") %> |
  <%= link_to "Excel", airports_path(format: "xls") %>
    <%= t ('or') %>
  <%= (I18n.t 'button.import') %> :
  <%= link_to "*.CSV, *.XLS, *.XLSX", import_airports_form_path, class: "btn btn-sm btn-default" %>
</p>