<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><p align="center"><%= (t 'choice_payment_method') %></p></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <% if (@currency == "USD") %>
          <div class="col-xs-6 col-md-4">
            <h4><p align="center"><%= (t 'payment_method.paypal') %></p></h4>
            <p align="center"><img src="/assets/theme/payments_logo/paypal_logo.png" alt="liqpay"></p>
            <%= form_tag("https://www.paypal.com/cgi-bin/webscr", method: "post") do %>
                <input type="hidden" name="business" value="">
                <!-- Specify a Buy Now button. -->
                <input type="hidden" name="cmd" value="_xclick">
                <!-- Specify details about the item that buyers will purchase. -->
                <input type="hidden" name="item_name" value="">
                <input type="hidden" name="item_number" value="<%= @last_top_up.id %>">
                <input type="hidden" name="amount" value="<%= @last_top_up.amount %>">
                <input type="hidden" name="currency_code" value="<%= @last_top_up.currency %>">
                <input type="hidden" name="return" value="">
                <!-- Display the payment button. -->
                <%= submit_tag (t 'button.pay'), class: "btn btn-sm btn-primary" %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>