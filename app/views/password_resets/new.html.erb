<h1 align="center"><%= t ('password_reset_block.reset_password') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_tag password_resets_path, :method => :post do %>
    <div class="field">
      <%= label_tag (t :email) %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="actions"><%= submit_tag (I18n.t 'password_reset_block.reset_password'), class: "btn btn-sm btn-primary" %></div>
<% end %>
  </div>
</div>