<% @reviews = Review.where(show: true).all %>
<% if @reviews.blank? || @reviews.nil? %>
<% else %>
    <div class="section gray-bg clearfix">
      <div class="container" style="margin-left: auto;">
        <div class="row">
          <div class="col-md-12">
            <div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
              <!-- Carousel items -->
              <div class="row">
                <div class="col-md-10 col-md-offset-1">
              <div class="carousel-inner">
                <% @reviews.in_groups_of(1).each_with_index do |group, index| %>
                    <% if index == 0 %>
                        <div class="active item">
                    <% else %>
                        <div class="item">
                    <% end %>
                    <% group.each do |review| %>
                        <% if review.nil? %>
                        <% else %>
                            <h2 class="title" style="margin-bottom: 0px;"><%= review.title %></h2>

                            <div class="testimonial-image">
                              <img src="<%= review.image_link %>" class="img-circle">
                            </div>
                            <div class="testimonial-body">
                              <p><%= review.review %></p>

                              <div class="testimonial-info-1">- <%= review.name %></div>
                              <div class="testimonial-info-2"><a href="<%= review.link %>" target="_blank"><%= review.link %></a></div>
                              <!--<div class="testimonial-info-2">By Company</div>-->
                            </div>
                        <% end %>
                    <% end %>
                    <% if index == 0 %>
                        </div>
                    <% else %>
                        </div>
                    <% end %>
                <% end %>

      </div>
                  </div>
                </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="font-weight: bold; border-radius: 100%; border: 1px solid lightgray; height: 38px; width: 38px;"><img alt="" src="/assets/theme/menu_icons_pack/arrow-left-black@2x.png" style="width: 20px; height: 20px; display: inline;"></span></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="font-weight: bold; border-radius: 100%; border: 1px solid lightgray; height: 38px; width: 38px;"><img alt="" src="/assets/theme/menu_icons_pack/arrow-right-black@2x.png" style="width: 20px; height: 20px; display: inline;"></span></a>
    </div>
<% end %>
      </div>
    </div>
  </div>
</div>


