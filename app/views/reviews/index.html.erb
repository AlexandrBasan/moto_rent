<h1 align="center">Listing reviews <span class="badge"><%= @reviews.count %></span></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Image link</th>
      <th>Name</th>
      <th>Language</th>
      <th>Title</th>
      <th>Review</th>
      <th>Show</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.image_link %></td>
        <td><%= review.name %></td>
        <td><%= review.language %></td>
        <td><%= review.title %></td>
        <td><%= review.review %></td>
        <td><%= review.show %></td>
        <td><%= review.link %></td>
        <td><%= link_to 'Show', review, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_review_path(review), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: {confirm: (t 'operations_confirmation.confirm')}, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path, class: "btn btn-sm btn-primary" %>
