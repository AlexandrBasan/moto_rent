<h1 align="center">Listing vehicletypes <span class="badge"><%= @vehicletypes.count %></span></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Vtype</th>
      <th>Vdescription</th>
      <th>Image</th>
      <th>Passnum</th>
      <th>Bagagenum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicletypes.each do |vehicletype| %>
      <tr>
        <td><%= vehicletype.vtype %></td>
        <td><%= vehicletype.vdescription %></td>
        <td><div class="portrait_map">
          <img alt="" src="<%= vehicletype.image %>">
        </div></td>
        <td><%= vehicletype.passnum %></td>
        <td><%= vehicletype.bagagenum %></td>
        <td><%= link_to (I18n.t 'button.show'), vehicletype, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to (I18n.t 'button.edit'), edit_vehicletype_path(vehicletype), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to (I18n.t 'button.delete'), vehicletype, method: :delete, data: {confirm: (t 'operations_confirmation.confirm')}, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicletype', new_vehicletype_path, class: "btn btn-sm btn-primary" %>
