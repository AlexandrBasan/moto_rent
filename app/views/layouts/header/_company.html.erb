<% if signed_in? %>
    <% if (current_user.provider == "facebook") || (current_user.provider == "twitter") || (current_user.provider == "google_oauth2") %>
        <li style="padding-right: 10px; margin-top: -4px;"><%= image_tag current_user.oauth_link_image, class: "img-circle" %></li>
    <% else %>
        <li style="padding-right: 10px; margin-top: -4px;"><%= gravatar_for current_user %></li>
    <% end %>
    <li style="margin-top: 5px; border-right: 1px solid lightgray; padding-right: 10px;"><h6><%= current_user.email %></h6></li>
<% else %>
<% end %>